{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch HTTP",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": [
        "http" // 启动参数
      ],
      "env": {
        "OTEL_SERVICE_NAME": "app",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "http://otelcol-opentelemetry-collector.observability.svc:4318"
      },
      "cwd": "${workspaceFolder}", // 修改为你的工作目录
      "showLog": true // 可选：显示调试日志
    },
    {
      "name": "Launch Async",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": [
        "async" // 启动参数
      ],
      "cwd": "${workspaceFolder}", // 修改为你的工作目录
      "showLog": true // 可选：显示调试日志
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    }
  ]
}